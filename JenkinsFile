pipeline {
  agent {
    docker {
      image 'abhishekf5/maven-abhishek-docker-agent:v1'
      args '--user root -v /var/run/docker.sock:/var/run/docker.sock' // mount Docker socket to access the host's Docker daemon
    }
  }
  stages {
    stage('Build and Test') {
      steps {
        // build the project and create a JAR file
        sh 'mvn clean package'
      }
    }
    stage('Static Code Analysis') {
      environment {
        SONAR_URL = "http://13.61.5.98:9000"
      }
      steps {
        withCredentials([string(credentialsId: 'sonarqube', variable: 'SONAR_AUTH_TOKEN')]) {
          sh 'mvn sonar:sonar -Dsonar.login=$SONAR_AUTH_TOKEN -Dsonar.host.url=${SONAR_URL}'
        }
      }
    }

    stage('Build Docker'){
        steps{
            script{
                sh '''
                echo 'Buid Docker Image'
                docker build -t mohansaravanan212/java-web-ultimate-cicd:${BUILD_NUMBER} .
                '''
            }
        }
    }

    stage('Push the artifacts'){
        steps{
            script{
                withCredentials([usernamePassword(credentialsId: 'docker-hub-credentials', usernameVariable: 'DOCKER_USERNAME', passwordVariable: 'DOCKER_PASSWORD')]) {
                    sh '''
                    echo 'Push to Repo'
                    echo $DOCKER_PASSWORD | docker login -u $DOCKER_USERNAME --password-stdin
                    docker push mohansaravanan212/java-web-ultimate-cicd:${BUILD_NUMBER}
                    '''
                }
            }
        }
    }
    stage('Checkout') {
      steps {
        sh 'echo Checkout_Manifests_Repo'
        git branch: 'main', url: 'https://github.com/mohansaravanan21/springboot-app-manifests.git'
      }
    }
    stage('Update Deployment File') {
        environment {
            GIT_REPO_NAME = "springboot-app-manifests"
            GIT_USER_NAME = "mohansaravanan21"
        }
        steps {
            withCredentials([string(credentialsId: 'github', variable: 'GITHUB_TOKEN')]) {
                sh '''
                    git config user.email "mohansekaran21@gmail.com"
                    git config user.name "mohansaravanan21"
                    BUILD_NUMBER=${BUILD_NUMBER}
                    sed -i "s|image: mohansaravanan212/java-web-ultimate-cicd:.*|image: mohansaravanan212/java-web-ultimate-cicd:${BUILD_NUMBER}|" springboot-app-manifests/deployment.yml
                    git add springboot-app-manifests/deployment.yml
                    git commit -m "Update deployment image to version ${BUILD_NUMBER}"
                    git push https://${GITHUB_TOKEN}@github.com/${GIT_USER_NAME}/${GIT_REPO_NAME} HEAD:main
                '''
            }
        }
    }
  }
}
